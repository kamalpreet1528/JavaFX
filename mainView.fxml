<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.myapp.CalculatorController">
    <Label text="Simple Calculator" />
    <HBox spacing="10">
        <TextField fx:id="num1Field" promptText="Enter number 1" />
        <TextField fx:id="num2Field" promptText="Enter number 2" />
    </HBox>
    <HBox spacing="10">
        <Button text="Add" onAction="#handleAddButton" />
        <Button text="Subtract" onAction="#handleSubButton" />
        <Button text="Multiply" onAction="#handleMulButton" />
        <Button text="Divide" onAction="#handleDivButton" />
    </HBox>
    <Label fx:id="resultLabel" />
</VBox>
